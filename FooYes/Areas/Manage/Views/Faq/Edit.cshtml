@model Faq
@{
    ViewData["Title"] = "Edit Question";
}


<div class="container">
    <h1>Edit</h1>

    <form method="post">
        <div class="form-group">
            <label asp-for="Question">Question</label>
            <textarea type="text" asp-for="Question" class="form-control" placeholder="Question"></textarea>
            <span class="text-danger" asp-validation-for="Question"></span>
        </div>
        <div class="form-group">
            <label asp-for="Answer">Answer</label>
            <textarea type="text" asp-for="Answer" class="form-control" placeholder="Answer"></textarea>
            <span class="text-danger" asp-validation-for="Answer"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>





