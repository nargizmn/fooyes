@model Setting
@{
    ViewData["Title"] = "Edit Setting";
}


<div class="container">
    <h1 class="mb-4">Edit Settings</h1>

    <form method="post" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-4">
                <div class="img-box d-inline-block" style="position:relative;max-width:150px">
                    <img src="~/uploads/settings/@Model.HeaderLogo" style="max-width:150px;background:black;" />
                </div>
                <input type="file" asp-for="HeaderLogoImgFile" />
                <span class="text-danger" asp-validation-for="HeaderLogoImgFile"></span>
            </div>
            <div class="form-group col-4">
                <div class="img-box d-inline-block" style="position:relative;max-width:150px">
                    <img src="~/uploads/settings/@Model.HeaderColorfulLogo" style="max-width:150px" />
                </div>
                <input type="file" asp-for="HeaderColorfulLogoImgFile" />
                <span class="text-danger" asp-validation-for="HeaderColorfulLogoImgFile"></span>
            </div>
            <div class="form-group col-4">
                <div class="img-box d-inline-block" style="position:relative;max-width:150px">
                    <img src="~/uploads/settings/@Model.HomeHeroSecBgImg" style="max-width:150px" />
                </div>
                <input type="file" asp-for="HomeHeroSecBgImgFile" />
                <span class="text-danger" asp-validation-for="HomeHeroSecBgImgFile"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="HomeHeroSecTitle">Title of Hero Section on Home Page</label>
            <input type="text" asp-for="HomeHeroSecTitle" class="form-control" placeholder="Title">
            <span class="text-danger" asp-validation-for="HomeHeroSecTitle"></span>
        </div>
        <div class="form-group">
            <label asp-for="HomeHeroSecSubtitle">Subtitle of Hero Section on Home Page</label>
            <input type="text" asp-for="HomeHeroSecSubtitle" class="form-control" placeholder="Subtitle">
            <span class="text-danger" asp-validation-for="HomeHeroSecSubtitle"></span>
        </div>
        <div class="form-row">
            <div class="form-group col-4">
                <div class="img-box d-inline-block" style="position:relative;max-width:150px">
                    <img src="~/uploads/settings/@Model.HomeBannerSecBgImg" style="max-width:150px" />
                </div>
                <input type="file" asp-for="HomeBannerSecBgImgFile" />
                <span class="text-danger" asp-validation-for="HomeBannerSecBgImgFile"></span>
            </div>
            <div class="form-group col-4">
                <div class="img-box d-inline-block" style="position:relative;max-width:150px">
                    <img src="~/uploads/settings/@Model.WorkWithUsHeroSecBgImg" style="max-width:150px" />
                </div>
                <input type="file" asp-for="WorkWithUsHeroSecBgImgFile" />
                <span class="text-danger" asp-validation-for="WorkWithUsHeroSecBgImgFile"></span>
            </div>
            <div class="form-group col-4">
                <div class="img-box d-inline-block" style="position:relative;max-width:150px">
                    <img src="~/uploads/settings/@Model.ContactHeroSecBgImg" style="max-width:150px" />
                </div>
                <input type="file" asp-for="ContactHeroSecBgImgFile" />
                <span class="text-danger" asp-validation-for="ContactHeroSecBgImgFile"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="HomeBannerSecTitle">Title of Banner Section on Home Page</label>
            <input type="text" asp-for="HomeBannerSecTitle" class="form-control" placeholder="Title">
            <span class="text-danger" asp-validation-for="HomeBannerSecTitle"></span>
        </div>
        <div class="form-group">
            <label asp-for="HomeBannerSecSubtitle">Subtitle of Hero Section on Home Page</label>
            <input type="text" asp-for="HomeBannerSecSubtitle" class="form-control" placeholder="Subtitle">
            <span class="text-danger" asp-validation-for="HomeBannerSecSubtitle"></span>
        </div>
        <div class="form-group">
            <label asp-for="HomeBannerSecDesc">Description of Hero Section on Home Page</label>
            <input type="text" asp-for="HomeBannerSecDesc" class="form-control" placeholder="Description">
            <span class="text-danger" asp-validation-for="HomeBannerSecDesc"></span>
        </div>
        <div class="form-group">
            <label asp-for="HomeOrderSecTitle">Title of Order Section on Home Page</label>
            <input type="text" asp-for="HomeOrderSecTitle" class="form-control" placeholder="Title">
            <span class="text-danger" asp-validation-for="HomeOrderSecTitle"></span>
        </div>
        <div class="form-group">
            <label asp-for="HomeOrderSecSubtitle1">First Subtitle of Order Section on Home Page</label>
            <input type="text" asp-for="HomeOrderSecSubtitle1" class="form-control" placeholder="First Subtitle">
            <span class="text-danger" asp-validation-for="HomeOrderSecSubtitle1"></span>
        </div>
        <div class="form-group">
            <label asp-for="HomeOrderSecSubtitle2">Second Subtitle of Order Section on Home Page</label>
            <input type="text" asp-for="HomeOrderSecSubtitle2" class="form-control" placeholder="Second Subtitle">
            <span class="text-danger" asp-validation-for="HomeOrderSecSubtitle2"></span>
        </div>
        <div class="form-row">
            <div class="form-group col-4">
                <label asp-for="Address">Address</label>
                <input type="text" asp-for="Address" class="form-control" placeholder="Address">
                <span class="text-danger" asp-validation-for="Address"></span>
            </div>
            <div class="form-group col-4">
                <label asp-for="Phone">Phone</label>
                <input type="text" asp-for="Phone" class="form-control" placeholder="Phone">
                <span class="text-danger" asp-validation-for="Phone"></span>
            </div>
            <div class="form-group col-4">
                <label asp-for="Email">Email</label>
                <input type="text" asp-for="Email" class="form-control" placeholder="Email">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="WorkWithUsHeroSecTitle">Title of Hero Section on Work With Us Page</label>
            <input type="text" asp-for="WorkWithUsHeroSecTitle" class="form-control" placeholder="Title">
            <span class="text-danger" asp-validation-for="WorkWithUsHeroSecTitle"></span>
        </div>
        <div class="form-group">
            <label asp-for="WorkWithUsHeroSecSubtitle">Subtitle of Hero Section on Work With Us Page</label>
            <input type="text" asp-for="WorkWithUsHeroSecSubtitle" class="form-control" placeholder="Subtitle">
            <span class="text-danger" asp-validation-for="WorkWithUsHeroSecSubtitle"></span>
        </div>
        <div class="form-group">
            <label asp-for="ContactHeroSecTitle">Title of Hero Section on Contact Page</label>
            <input type="text" asp-for="ContactHeroSecTitle" class="form-control" placeholder="Title">
            <span class="text-danger" asp-validation-for="ContactHeroSecTitle"></span>
        </div>
        <div class="form-group">
            <label asp-for="ContactHeroSecSubtitle">Subtitle of Hero Section on Contact Page</label>
            <input type="text" asp-for="ContactHeroSecSubtitle" class="form-control" placeholder="Subtitle">
            <span class="text-danger" asp-validation-for="ContactHeroSecSubtitle"></span>
        </div>
        <div class="form-group">
            <label asp-for="ContactMapUrl">Google Map URL</label>
            <input type="text" asp-for="ContactMapUrl" class="form-control" placeholder="Map Url">
            <span class="text-danger" asp-validation-for="ContactMapUrl"></span>
        </div>
        <div class="form-group">
            <label asp-for="JobTerms">Job Terms and Conditions on Work With Us Page</label>
            <input type="text" asp-for="JobTerms" class="form-control" placeholder="Terms and Conditions">
            <span class="text-danger" asp-validation-for="JobTerms"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>



