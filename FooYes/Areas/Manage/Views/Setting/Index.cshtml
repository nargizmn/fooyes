@model Setting  

@{ 
    ViewData["Title"] = "Settings";
    int count = 1;
}

<div class="container-fluid">
        <h1 class="mb-4">Settings</h1>
    <div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Title of hero section</th>
                    <th scope="col">Subtitle of hero section</th>
                    <th scope="col">Address</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Email</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">@(count++)</th>
                    <td>@Model.HomeHeroSecTitle</td>
                    <td>@Model.HomeHeroSecSubtitle</td>
                    <td>@Model.Address</td>
                    <td>@Model.Phone</td>
                    <td>@Model.Email</td>
                    <td class="text-nowrap">
                        <a asp-action="edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit Settings</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
