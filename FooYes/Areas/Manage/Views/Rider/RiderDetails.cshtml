@model Rider

@{
    ViewData["Title"] = "Rider Details";
}

<div class="container">
    <div class="card">
        <div class="card-body">
            <h1 class="mb-3">Rider request</h1>
            <h6 class="card-title">Fullname: @Model.Fullname</h6>
            <h6 class="card-title">City: @Model.City</h6>
            <h6 class="card-title">Vehicle Type: @Model.VehicleType</h6>
            <h6 class="card-title">Email: @Model.Email </h6>
            <h6 class="card-title">Telephone: @Model.Telephone</h6>
            <h6 class="card-title">Age: @Model.Age</h6>
            <h6 class="card-title">Gender: @Model.Gender</h6>
            <h6 class="card-title">Heard about us: @Model.JobSource</h6>
            <h6 class="card-title">Created At: @Model.CreatedAt.ToString("HH:mm dd MMM, yyyy")</h6>
            @if (Model.Status != null)
            {
                <h6 class="card-title">Admin note: @Model.AdminNote</h6>
            }
            <h6 class="card-title">
                Status:
                @if (Model.Status == null)
                {
                    <span class="badge badge-warning">Pending</span>
                }
                else if (Model.Status == false)
                {
                    <span class="badge badge-danger">Rejected</span>
                }
            </h6>
            @if (Model.Status == null)
            {
                <form>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="note">Note</label>
                            <textarea name="note" class="form-control admin-note"></textarea>
                            <span class="text-danger admin-note-validation"></span>
                        </div>
                    </div>
                </form>
                <a asp-action="acceptrider" asp-route-riderId="@Model.Id" class="btn btn-success rider-accept-button"> Accept</a>
                <a asp-action="rejectrider" asp-route-riderId="@Model.Id" class="btn btn-danger rider-reject-button">Reject</a>
            }
        </div>
    </div>
</div>