@model AdminCreateViewModel
@{
    ViewData["Title"] = "Create New Admin";
}
<div class="container">
    <h1 class="my-5">Create</h1>
    <form method="post">
        <div class="form-group">
            <label asp-for="UserName">Username</label>
            <input type="text" class="form-control" id="name" asp-for="UserName" placeholder="Type new admin's username">
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input type="text" class="form-control" id="name" asp-for="Name" placeholder="Type new admin's name">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName">Lastname</label>
            <input type="text" class="form-control" id="name" asp-for="LastName" placeholder="Type new admin's last name">
            <span class="text-danger" asp-validation-for="LastName"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input type="password" class="form-control" id="name" asp-for="Password" placeholder="Password">
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Confirm Password</label>
            <input type="password" class="form-control" id="name" asp-for="ConfirmPassword" placeholder="Confirm Password">
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect1">Choose admin's role</label>
            <select class="form-control" asp-for="IdentityRole">
                <option value="Admin">Admin</option>
                <option value="Editor">Editor</option>
            </select>
            <span class="text-danger" asp-validation-for="IdentityRole"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>