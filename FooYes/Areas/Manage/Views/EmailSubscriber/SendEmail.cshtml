@model SendEmailViewModel
@{
    ViewData["Title"] = "Send Email to Subscribers";
}

<div class="container">
    <h1>Send Email to Subscribers</h1>

    <form method="post">
        <div class="form-group">
            <label asp-for="Subject">Subject</label>
            <input type="text" asp-for="Subject" class="form-control" placeholder="Subject">
            <span class="text-danger" asp-validation-for="Subject"></span>
        </div>
        <div class="form-group">
            <label asp-for="Header">Header</label>
            <input type="text" asp-for="Header" class="form-control" placeholder="Header">
            <span class="text-danger" asp-validation-for="Header"></span>
        </div>
        <div class="form-group">
            <label asp-for="Text">Text</label>
            <textarea type="text" asp-for="Text" class="form-control" placeholder="Text"></textarea>
            <span class="text-danger" asp-validation-for="Text"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>