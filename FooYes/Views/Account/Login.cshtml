@model UserLoginViewModel
@{
    ViewBag.HeaderClass = "white-header";
}

<!-- SIGN IN FORM -->
<main class="sign-in my-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-8">
                <div class="sign-in-form">
                    <h2 class="mb-4">Sign In</h2>
                    <form method="post" asp-controller="account" asp-action="login" autocomplete="off">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="form-group mb-3">
                            <i class="far fa-envelope"></i>
                            <input asp-for="Username" class="form-control" placeholder="Username">
                        </div>
                        <span asp-validation-for="Username" class="text-danger"></span>
                        <div class="form-group mb-3">
                            <i class="fas fa-lock"></i>
                            <input type="password" asp-for="Password" class="form-control" placeholder="Password">
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <div class="forgot-password mb-3">
                            <a asp-action="forgotpassword">Forgot Password?</a>
                        </div>
                        <button type="submit">Login Now!</button>
                        <div class="sign-in-footer">
                            <small>Don't have an acccount?</small>
                            <a asp-action="register">Sign up</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
