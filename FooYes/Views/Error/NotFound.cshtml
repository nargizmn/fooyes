@{
    ViewBag.HeaderClass = "white-header";
}

<!-- MAIN SECTION -->
<main class="error-page my-5 py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-7 col-lg-9">
                <div class="img-container">
                    <img src="~/assets/images/404.svg" alt="">
                </div>
                <p>We're sorry, but the page you were looking for doesn't exist.</p>
                <form asp-action="index" asp-controller="restaurant">
                    <div class="search-line row mt-4 py-0">
                        <div class="col-10 p-0">
                            <div class="form-group">
                                <input class="form-control" name="search" type="text" autocomplete="off" placeholder="What are you looking for?">
                            </div>
                        </div>
                        <div class="col-2 p-0 align-self-center">
                            <button type="submit">Search</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</main>
